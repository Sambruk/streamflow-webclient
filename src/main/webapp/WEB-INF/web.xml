   <servlet>
      <servlet-name>api</servlet-name>
      <servlet-class>org.mitre.dsmiley.httpproxy.ProxyServlet</servlet-class>
      <init-param>
        <param-name>targetUri</param-name>
        <param-value>http://localhost/streamflow</param-value>
        <!-- <param-value>http://test-sf.jayway.com/streamflow</param-value> -->
      </init-param>
      <init-param>
        <param-name>log</param-name>
        <param-value>true</param-value>
      </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>api</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>externalContent</servlet-name>
        <servlet-class>org.mitre.dsmiley.httpproxy.ProxyServlet</servlet-class>
        <init-param>
            <param-name>targetUri</param-name>
            <param-value>https://imcode.com/</param-value>
        </init-param>
        <init-param>
            <param-name>log</param-name>
            <param-value>true</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>externalContent</servlet-name>
        <url-pattern>/external/content</url-pattern>
    </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>